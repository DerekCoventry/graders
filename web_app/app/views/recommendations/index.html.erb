<p id="notice"><%= notice %></p>

<h1>Recommendations</h1>
<form action="../recommendations/new">
  <button class=" ui top attached violet button">New Recomendation</button>
</form>
<div class="ui attached segment">
<table>
  <thead>
    <tr>
      <th style="padding-right:10px">Professor</th>
      <th style="padding-right:10px">Student</th>
      <th style="padding-right:10px">Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recommendations.each do |recommendation| %>
      <tr>
        <td style="padding-right:10px"><%= recommendation.professor %></td>
        <td style="padding-right:10px"><%= recommendation.student %></td>
        <td style="padding-right:10px"><%= recommendation.course %></td>
        <td style="padding-right:10px"><%= link_to 'Show', recommendation %></td>
        <td style="padding-right:10px"><%= link_to 'Edit', edit_recommendation_path(recommendation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

