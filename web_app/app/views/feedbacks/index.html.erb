<p id="notice"><%= notice %></p>
<h1>Feedbacks</h1>
<form action="../feedbacks/new">
  <button class=" ui top attached violet button">New Feedback</button>
</form>
<div class="ui attached segment">
  <table>
    <thead>
      <tr>
        <th style="padding-right:10px">Professor</th>
        <th style="padding-right:10px">Professor Email</th>
        <th style="padding-right:10px">Coursenumber</th>
        <th style="padding-right:10px">Sectionnumber</th>
        <th style="padding-right:10px">Student Email</th>
        <th style="padding-right:10px">Student</th>
        <th style="padding-right:10px">Rating</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @feedbacks.each do |feedback| %>
        <tr>
          <td style="padding-right:10px"><%= feedback.professor %></td>
          <td style="padding-right:10px"><%= feedback.pemail %></td>
          <td style="padding-right:10px"><%= feedback.courseNumber %></td>
          <td style="padding-right:10px"><%= feedback.sectionNumber %></td>
          <td style="padding-right:10px"><%= feedback.semail %></td>
          <td style="padding-right:10px"><%= feedback.sname %></td>
          <td style="padding-right:10px"><%= feedback.rating %></td>
          <td style="padding-right:10px"><%= link_to 'Show', feedback %></td>
          <% if feedback.pemail == current_user.email %>
          <td style="padding-right:10px"><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>

<br>

